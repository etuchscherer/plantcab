{
  "name": "svelte-ts-tailwind-app",
  "version": "1.0.0",
  "scripts": {
    "preinstall": "npm run verify-node",
    "verify-node": ". ~/.nvm/nvm.sh && nvm install $(cat .nvmrc) && nvm use;",
    "dev": "npm run verify-node && routify -c my-server",
    "my-server": "rollup -c -w",
    "build": "routify -b && rollup -c",
    "start": "sirv public --single",
    "validate": "svelte-check"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@sveltech/routify": "^1.9.9",
    "@tsconfig/svelte": "^1.0.10",
    "node-sass": "^4.14.1",
    "postcss": "^7.0.32",
    "postcss-load-config": "^2.1.0",
    "rollup": "^2.26.10",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.5.1",
    "tailwindcss": "1.8.4",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  }
}
